{
	"name": "blustore-api",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "CORS_LOCALHOST=true node --watch-path=src/ src/index.js",
		"start": "node src/index.js",
		"lint": "prettier --write . && eslint --fix .",
		"eslint": "eslint . --max-warnings=0"
