		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.3"
	},
	"devDependencies": {
		"eslint": "^9.39.1",
		"eslint-plugin-import": "^2.32.0",
		"globals": "^16.5.0",
		"prettier": "^3.7.2"
	},
	"packageManager": "pnpm@10.17.1"
